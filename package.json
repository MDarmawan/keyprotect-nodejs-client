{
  "name": "@ibm-cloud/ibm-key-protect",
  "version": "0.1.7",
  "description": "IBM Cloud Key Protect Node SDK",
  "repository": {
    "type": "git",
    "url": "https://github.com/IBM/keyprotect-nodejs-client"
  },
  "keywords": [
    "ibm",
    "key-management-service"
  ],
  "author": "IBM Corp.",
  "scripts": {
    "eslint:fix": "eslint . --fix",
    "eslint:check": "eslint . --cache",
    "tslint:fix": "tslint --fix -p . -c tslint.json",
    "tslint:check": "tslint -p . -c ./tslint.json",
    "lint": "npm run eslint:check && npm run tslint:check",
    "lint-fix": "npm run eslint:fix && npm run tslint:fix",
    "build": "tsc && cp package.json dist/ && cp README.md dist/",
    "prepublishOnly": "npm run build",
    "postversion": "tsc-publish --no-checks --dry-run",
    "jest": "jest",
    "test": "npm run build && npm run lint && jest test/",
    "test-unit": "npm run build && jest test/unit/",
    "test-integration": "npm run build && jest test/integration",
    "test-unit-travis": "jest --runInBand test/unit/",
    "test-integration-travis": "jest --runInBand --no-colors --testNamePattern='^((?!@slow).)*$' --json test/integration > test-output.log",
    "report-coverage": "codecov",
    "check-packages": "installed-check -e -d -v"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^14.0.0"
  },
  "dependencies": {
    "@ibm-cloud/platform-services": "^0.39.0",
    "@types/node": "^20.5.4",
    "extend": "^3.0.2",
    "ibm-cloud-sdk-core": "^4.1.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "axios": "^1.4.0",
    "codecov": "^3.8.2",
    "eslint": "^8.47.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "installed-check": "^8.0.0",
    "jest": "^29.6.3",
    "nock": "^13.3.3",
    "prettier": "^3.0.2",
    "semantic-release": "^21.0.9",
    "tsc-publish": "^0.5.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "<rootDir>/test/"
    ],
    "testEnvironment": "node"
  }
}
